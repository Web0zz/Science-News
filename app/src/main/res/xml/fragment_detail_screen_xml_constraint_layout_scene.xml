<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/thumbnail_imageView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="@+id/tall_left_guideline"
            motion:layout_constraintTop_toTopOf="@+id/tall_top_guideline" />
        <Constraint
            android:id="@+id/extra_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintEnd_toStartOf="@+id/tall_right_guideline"
            motion:layout_constraintTop_toTopOf="@+id/tall_top_guideline" />
        <Constraint
            android:id="@+id/dateAuthor_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintBottom_toBottomOf="@+id/thumbnail_imageView"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/thumbnail_imageView" />
        <Constraint
            android:id="@+id/title_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintEnd_toStartOf="@+id/tall_right_guideline"
            motion:layout_constraintStart_toStartOf="@+id/tall_left_guideline"
            motion:layout_constraintTop_toBottomOf="@+id/dateAuthor_textView" />
        <Constraint
            android:id="@+id/article_short_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0"
            motion:layout_constraintEnd_toStartOf="@+id/tall_right_guideline"
            motion:layout_constraintStart_toStartOf="@+id/tall_left_guideline"
            motion:layout_constraintTop_toBottomOf="@+id/title_textView" />
        <Constraint
            android:id="@+id/article_body_first_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintEnd_toStartOf="@+id/tall_right_guideline"
            motion:layout_constraintStart_toStartOf="@+id/tall_left_guideline"
            motion:layout_constraintTop_toBottomOf="@+id/article_short_textView" />
        <Constraint
            android:id="@+id/content_imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintEnd_toStartOf="@+id/tall_right_guideline"
            motion:layout_constraintStart_toStartOf="@+id/tall_left_guideline"
            motion:layout_constraintTop_toBottomOf="@+id/article_body_first_textView" />
        <Constraint
            android:id="@+id/article_body_second_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintEnd_toStartOf="@+id/tall_right_guideline"
            motion:layout_constraintStart_toStartOf="@+id/tall_left_guideline"
            motion:layout_constraintTop_toBottomOf="@+id/content_imageView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end" />
</MotionScene>