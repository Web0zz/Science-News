<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user_image"
            type="java.lang.String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_background">

        <ImageView
            android:id="@+id/user_imageView"
            LoadCircleImage="@{user_image}"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/user"
            app:layout_constraintStart_toStartOf="@id/left_top_bar_guideline"
            app:layout_constraintTop_toTopOf="@id/top_top_bar_guideline"
            tools:src="@drawable/news1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pinto"
            android:text="@string/science_news"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/user_imageView"
            app:layout_constraintEnd_toStartOf="@id/search_imageButton"
            app:layout_constraintStart_toEndOf="@id/user_imageView"
            app:layout_constraintTop_toTopOf="@id/top_top_bar_guideline" />

        <ImageButton
            android:id="@+id/search_imageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/search"
            android:minHeight="48dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@id/user_imageView"
            app:layout_constraintEnd_toStartOf="@id/right_top_bar_guideline"
            app:layout_constraintTop_toTopOf="@id/top_top_bar_guideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_top_bar_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="5dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_top_bar_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_top_bar_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>